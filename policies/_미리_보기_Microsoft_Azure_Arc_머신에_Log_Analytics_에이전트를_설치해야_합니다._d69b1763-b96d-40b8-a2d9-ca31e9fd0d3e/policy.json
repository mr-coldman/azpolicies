{
 "properties": {
  "displayName": "[미리 보기]: Microsoft Azure Arc 머신에 Log Analytics 에이전트를 설치해야 합니다.",
  "policyType": "BuiltIn",
  "mode": "Indexed",
  "description": "이 정책은 Log Analytics 에이전트가 설치되어 있지 않은 경우 Microsoft Azure Arc 머신을 감사합니다.",
  "metadata": {
   "version": "1.0.0-preview",
   "category": "Monitoring",
   "preview": true
  },
  "parameters": {
   "effect": {
    "type": "String",
    "metadata": {
     "displayName": "효과",
     "description": "정책 실행을 사용 또는 사용 안 함"
    },
    "allowedValues": [
     "AuditIfNotExists",
     "Disabled"
    ],
    "defaultValue": "AuditIfNotExists"
   }
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "equals": "Microsoft.HybridCompute/machines"
     },
     {
      "field": "Microsoft.HybridCompute/imageOffer",
      "like": "windows*"
     }
    ]
   },
   "then": {
    "effect": "[parameters('effect')]",
    "details": {
     "type": "Microsoft.HybridCompute/machines/extensions",
     "existenceCondition": {
      "allOf": [
       {
        "field": "Microsoft.HybridCompute/machines/extensions/type",
        "equals": "MicrosoftMonitoringAgent"
       },
       {
        "field": "Microsoft.HybridCompute/machines/extensions/publisher",
        "equals": "Microsoft.EnterpriseCloud.Monitoring"
       },
       {
        "field": "Microsoft.HybridCompute/machines/extensions/provisioningState",
        "equals": "Succeeded"
       }
      ]
     }
    }
   }
  }
 },
 "id": "/providers/Microsoft.Authorization/policyDefinitions/d69b1763-b96d-40b8-a2d9-ca31e9fd0d3e",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "d69b1763-b96d-40b8-a2d9-ca31e9fd0d3e"
}